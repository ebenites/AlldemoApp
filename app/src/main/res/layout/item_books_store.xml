<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="8dp"
    tools:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/anchor">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/bg_drawer_header"/>

            <RelativeLayout
                android:id="@+id/gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:alpha=".6"
                android:background="@color/card_dark"/>

        </RelativeLayout>

        <View
            android:id="@+id/anchor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/anchor"
            android:padding="16dp">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/buy_button"
                android:layout_marginBottom="4dp"
                android:textSize="16sp"
                android:textColor="@color/secondaryText"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Sintaxis BÃ¡sica de PHP"/>

            <TextView
                android:id="@+id/price_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_text"
                android:layout_toStartOf="@+id/buy_button"
                android:textSize="16sp"
                android:textColor="@color/primaryText"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="S/ 180.00"/>

            <Button
                android:id="@+id/buy_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                style="@style/Widget.AppCompat.Button.Colored"
                android:drawableStart="@drawable/ic_cart_white"
                android:drawablePadding="8dp"
                android:text="@string/app_buy"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>